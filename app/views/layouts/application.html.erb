		</div>
	</div>
	
	<div class="lefticons" id="lefticons">
		<div class="hm licon">
			<a>
			      <p  name="headicon" class="headicon" ></p>
			</a>
		</div>
		<div class="cus licon">
		     <a href="../sessions/reload?t=<%=OrgOperateType::Client%>">
			     <p  name="customericon" class="customericon" style=" cursor:pointer;" ></p>
			 </a> 
		</div>
		<div class="sup licon">
		       <a href="../sessions/reload?t=<%=OrgOperateType::Supplier%>">
			 <p  name="suppliericon" class="suppliericon" style=" cursor:pointer;" ></p>
			 </a>
		</div>
	</div>
	
<div class="content">
	  <div class="wrapcontent">
			<%= yield %>
	  </div>
</div>
