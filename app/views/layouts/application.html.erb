	<div class="subicons">
		<div class="fixedtop">
			<ul class="subs">
				<li><a href="/welcome"><img src="/assets/homeicon.png"/></a></li>
				<li><img src="/assets/backicon.png"/></li>
				<% if session[:orgOpeType]==OrgOperateType::Client %>
					<li><a href="../demander/demand_upload">上传需求</a></li>
					 <li><a href="../demander">查看需求</a></li>
			          <li><a  href="../delivery">查看运单</a></li>
					<li><a href="../organisation_manager/search">供应商信息</a></li>
					<li>数据分析</li>
					<li>零件入库</li>
				<% elsif session[:orgOpeType]==OrgOperateType::Supplier %>
					<li><a href="../demander">查看需求</a></li>
					<li><a href="#">需求转换</a></li>
					<li>数据分析</li>
					<li><a  href="../delivery/pick_part">发运</a></li>
			          <li><a  href="../delivery">查看运单</a></li>
			          <li><a href="../organisation_manager/search">客户信息</a></li>
				<% end %>
