
<p style="color: red"><%= notice%></p>
<br/>
<h1><%= @org.name %></h1>

<hr/>
<div id="result">
		<div>
				<%= text_field_tag :id, @org.id, :size=>3, :readOnly=>true, :style=>"display:none" %>
				<label>名称:</label><%= @org.name %>
				<br/>
				<label>缩写:</label><%= @org.abbr %>
				<br/>
				<label>介绍:</label><%= @org.description %>
		</div>
		
		<hr/>
		<div>
				<label>联系人:</label><%= @org.contact %>
				<br/>
				<label>电子邮箱:</label><%= @org.email %>
		</div>
		
		<hr/>
		<div>
				<label>电话:</label><%= @org.tel %>
				<br/>
				<label>网站:</label><%= @org.website %>
				<br/>
				<label>地址:</label><%= @org.address %>
		</div>
</div>
<hr/>

		<%= button_tag '编辑',:name=>"edit",:type=>'button',:onclick=>"organisation_edit();"%>
		<%= button_tag '修改',:name=>"modify",:type=>'button',:onclick=>"organisation_edit_submit();",:style=>"display:none"%>


