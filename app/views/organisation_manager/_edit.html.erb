
<%= form_tag( {:action=>:edit}, id:"forminfo" ) do %>
<fieldset>
		<legend>机构信息</legend>
		<div>
				<%= text_field_tag :id, @org.id, :size=>3, :readOnly=>true, :style=>"display:none" %>
				<label>名称:</label><%= text_field_tag :name, @org.name %>
				<br/>
				<label>缩写:</label><%= text_field_tag :abbr, @org.abbr %>
				<br/>
				<label>介绍:</label><%= text_field_tag :description, @org.description %>
		</div>
		
		<hr/>
		<div>
				<label>联系人:</label><%= text_field_tag :contact, @org.contact %>
				<br/>
				<label>电子邮箱:</label><%= text_field_tag :email, @org.email %>
		</div>
		
		<hr/>
		<div>
				<label>电话:</label><%= text_field_tag :tel, @org.tel %>
				<br/>
				<label>网站:</label><%= text_field_tag :website, @org.website %>
				<br/>
				<label>地址:</label><%= text_field_tag :address, @org.address %>
		</div>
</fieldset>
<% end %>


